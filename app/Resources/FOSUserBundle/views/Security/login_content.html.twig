{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="valign">
<div class="container ">
    <div class="row">
        <div class="col-md-12">
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                {% endif %}
                <div class="text-center mb-4">
                    <h1 class="text-primary">Log into WhichOne</h1>
                </div>

                <div class="form-label-group">
                    <label for="inputEmail">{{ 'security.login.username'|trans }}</label>
                    <input type="text" name="_username" id="inputEmail" class="form-control" placeholder="{{ 'security.login.username'|trans }}" required autofocus>
                </div>

                <div class="form-label-group">
                    <label for="inputPassword form-label-item">{{ 'security.login.password'|trans }}</label>
                    <input type="password"  name="_password" id="inputPassword" class="form-control" placeholder="{{ 'security.login.password'|trans }}" required>
                </div>

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me" value="one"> {{ 'security.login.remember_me'|trans }}
                    </label>
                </div>

                <input class="btn btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/><br>
                <a href="{{ path('fos_user_registration_register') }}"><input class="btn btn btn-primary btn-block" value="{{ 'Register'|trans }}"/></a>

                <p class="mt-5 mb-3 text-muted text-center">&copy; {{ 'now'|date('Y') }}</p>
            </form>
        </div>
    </div>
</div></div>